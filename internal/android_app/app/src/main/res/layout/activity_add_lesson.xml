<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingVertical="20dp"
            android:paddingHorizontal="10dp"
            android:id="@+id/header"
            android:background="#5D7D98"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/AddLessonActivity_btn_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/back_icon">
            </ImageButton>
            <TextView
                android:layout_weight="1"
                android:textSize="35dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ders Ekle">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/body"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F9FF"
            android:orientation="vertical">

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5D7D98"
                android:textSize="20sp"
                android:text="Dersin Adını Giriniz"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="80dp">
            </TextView>

            <EditText
                android:id="@+id/AddLessonActivity_edtTxt_lessonName"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:layout_height="50dp"
                android:layout_marginTop="20dp">
            </EditText>

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5D7D98"
                android:textSize="20sp"
                android:text="Kurs No"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="30dp">
            </TextView>
            <EditText
                android:id="@+id/AddLessonActivity_edtTxt_chooseCourse"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:inputType="number"
                android:background="#FFFFFF"
                android:layout_marginBottom="32dp"
                android:layout_height="50dp">
            </EditText>
<!--            <Spinner-->
<!--                android:id="@+id/AddLessonActivity_spinner_chooseCourse"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                >-->
<!--            </Spinner>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#5D7D98"
                        android:textSize="20sp"
                        android:text="Gün"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold">
                    </TextView>
                    <EditText
                        android:id="@+id/AddLessonActivity_edtTxt_chooseDay"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        android:layout_height="match_parent"
                        android:inputType="date"
                        android:layout_weight="1">
                    </EditText>
<!--                    <Spinner-->
<!--                        android:id="@+id/AddLessonActivity_spinner_chooseDay"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1">-->
<!--                    </Spinner>-->

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#5D7D98"
                        android:textSize="20sp"
                        android:text="Saat"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold">
                    </TextView>
                    <EditText
                        android:id="@+id/AddLessonActivity_edtTxt_chooseHour"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        android:inputType="time"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                    </EditText>
<!--                    <Spinner-->
<!--                        android:id="@+id/AddLessonActivity_spinner_chooseHour"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_weight="1">-->
<!--                    </Spinner>-->

                </LinearLayout>



            </LinearLayout>


            <Button
                android:id="@+id/AddLessonActivity_btn_next"
                android:text="İlerle"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#5D7D98"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="65dp" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>
