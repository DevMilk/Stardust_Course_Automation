<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/header"
            android:background="#F1F9FF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#5D7D98"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Silme İşlemleri">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:paddingHorizontal="35dp"
            android:id="@+id/body2"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5D7D98"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#BCE0FD"
                android:orientation="horizontal">

                <EditText
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Ders ID"/>
                <Button
                    android:textColor="#3A4E5F"
                    android:background="#BCE0FD"
                    android:id="@+id/AdminAddingActivity_btn_deleteLesson"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Ders Sil">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#BCE0FD"
                android:orientation="horizontal">

                <EditText
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Derslik ID"/>
                <Button
                    android:layout_weight="1"
                    android:textColor="#3A4E5F"
                    android:id="@+id/AdminAddingActivity_btn_deleteClassroom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Derslik Sil"
                    android:background="#BCE0FD">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#BCE0FD"
                android:orientation="horizontal">

                <EditText
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Kur ID"/>
                <Button
                    android:layout_weight="1"
                    android:textColor="#3A4E5F"
                    android:id="@+id/AdminAddingActivity_btn_deleteKur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kur Sil"
                    android:background="#BCE0FD">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#BCE0FD"
                android:orientation="horizontal">

                <EditText
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Kurs ID"/>
                <Button
                    android:textColor="#3A4E5F"
                    android:layout_weight="1"
                    android:id="@+id/AdminAddingActivity_btn_deleteCourse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kurs Sil "
                    android:background="#BCE0FD">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#BCE0FD"
                android:orientation="horizontal">

                <EditText
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Şube ID"/>
                <Button
                    android:layout_height="match_parent"
                    android:id="@+id/AdminAddingActivity_btn_deleteBranch"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Şube Sil"
                    android:textColor="#3A4E5F"
                    android:background="#BCE0FD">
                </Button>

            </LinearLayout>
            <Button
                android:layout_marginTop="40dp"
                android:id="@+id/AdminActivity_btn_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Geri"
                android:textColor="#3A4E5F"
                android:background="#F1F9FF">
            </Button>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
