<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F1F9FF"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_marginVertical="70dp"
        android:layout_marginHorizontal="40dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/MessageActivity_imgView"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/tick_icon"
            android:layout_width="match_parent"
            android:layout_height="190dp">
        </ImageView>

        <TextView
            android:id="@+id/MessageActivity_tv_message"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:textColor="#5D7D98"
            android:textSize="30sp"
            android:gravity="center"
            android:text="İŞLEM BAŞARILI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    <Button
        android:id="@+id/MessageActivity_btn_okey"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="25dp"
        android:background="#5D7D98"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tamam">
    </Button>
    </LinearLayout>
</LinearLayout>
