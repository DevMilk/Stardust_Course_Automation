<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F9FF"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="70dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/MessageActivity_imgView"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/tick_icon"></ImageView>

            <TextView
                android:id="@+id/MessageActivity_tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="İŞLEM BAŞARILI"
                android:textColor="#5D7D98"
                android:textSize="30sp"></TextView>

            <Button
                android:id="@+id/MessageActivity_btn_okey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#5D7D98"
                android:text="Tamam"
                android:textColor="#FFFFFF"
                android:textSize="20sp"></Button>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/MessageActivity_ProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>


</LinearLayout>
